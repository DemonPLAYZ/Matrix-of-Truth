# Environment variables for Docker deployment
# Copy this file to .env and fill in your actual values

# Core Configuration
PORT=8000
PYTHONPATH=/app

# Google Services
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Search and Fact Checking APIs
SERPER_API_KEY=your_serper_api_key_here
GROQ_API_KEY=your_groq_api_key_here
NEWS_API_KEY=your_news_api_key_here
FACT_CHECK_URL=your_fact_check_url_here
WIKIDATA_URL=https://www.wikidata.org/w/api.php

# Database
MONGO_URL=your_mongodb_connection_string_here

# Security
SECRET_KEY=your_secret_key_here

# Real-time Services
PUSHER_APP_ID=your_pusher_app_id_here
PUSHER_KEY=your_pusher_key_here
PUSHER_SECRET=your_pusher_secret_here
PUSHER_CLUSTER=your_pusher_cluster_here

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id_here
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_firebase_client_email_here
FIREBASE_CLIENT_ID=your_firebase_client_id_here
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=your_firebase_client_cert_url_here
FIREBASE_UNIVERSE_DOMAIN=googleapis.com

# Social Media APIs (Optional)
INSTA_SCRAP_URL=your_instagram_scraping_url_here
X_RAPIDAPI_KEY=your_rapidapi_key_here
X_RAPIDAPI_HOST=your_rapidapi_host_here
TWITTER_RAPIDAPI_KEY=your_twitter_rapidapi_key_here

# Streaming Services (Optional)
KAFKA_BOOTSTRAP_SERVERS=your_kafka_servers_here
GLASSFLOW_ACCESS_TOKEN=your_glassflow_token_here
GLASSFLOW_PIPELINE_ID=your_glassflow_pipeline_id_here
LIVENEWS_GLASSFLOW_ID=your_livenews_glassflow_id_here
LIVENEWS_GLASSFLOW_TOKEN=your_livenews_glassflow_token_here

# Video Services (Optional)
LIVEPEER_API_KEY=your_livepeer_api_key_here

# Render-specific (automatically set by Render)
RENDER_SERVICE_NAME=matrix-of-truth-backend
RENDER=true